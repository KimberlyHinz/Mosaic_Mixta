journal = {International Journal of Systematic and Evolutionary Microbiology},
number = {3},
pages = {1583--1592},
title = {{Erwinia gerundensis sp. nov., a cosmopolitan epiphyte originally isolated from pome fruit trees}},
volume = {66},
year = {2016}
}
@article{GAVINI1989,
