journal = {Annual Review of Genetics},
month = {nov},
number = {1},
pages = {309--338},
publisher = {Annual Reviews},
title = {{Orthologs, Paralogs, and Evolutionary Genomics}},
url = {https://doi.org/10.1146/annurev.genet.39.073003.114725},
volume = {39},
year = {2005}
}
