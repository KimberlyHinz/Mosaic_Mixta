title = {{The bacterial species dilemma and the genomic-phylogenetic species concept}},
url = {https://pubmed.ncbi.nlm.nih.gov/17062409 https://www.ncbi.nlm.nih.gov/pmc/articles/PMC1857736/},
volume = {361},
