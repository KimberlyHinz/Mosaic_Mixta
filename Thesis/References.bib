journal = {International Journal of Systematic and Evolutionary Microbiology},
number = {3},
pages = {484--494},
title = {{Transfer of Pantoea citrea, Pantoea punctata and Pantoea terrea to the genus Tatumella emend. as Tatumella citrea comb. nov., Tatumella punctata comb. nov. and Tatumella terrea comb. nov. and description of Tatumella morbirosei sp. nov.}},
